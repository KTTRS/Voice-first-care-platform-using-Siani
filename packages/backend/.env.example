# Required database connection (Neon example; replace credentials as needed)
DATABASE_URL="postgresql://neondb_owner:YOUR_PASSWORD@ep-shy-base-aeamd3i4-pooler.c-2.us-east-2.aws.neon.tech/neondb?sslmode=require&channel_binding=require"
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
PORT=3000
NODE_ENV="development"
REDIS_URL="redis://localhost:6379"

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key"

# Transcription Service Configuration
# Strategy: "openai" | "local" | "hybrid"
# - openai: Fast, cloud-based, sends data externally (requires OPENAI_API_KEY)
# - local: Self-hosted, HIPAA-compliant, GPU required (requires LOCAL_WHISPER_URL)
# - hybrid: Try local first, fallback to OpenAI (best of both worlds)
TRANSCRIPTION_STRATEGY="openai"

# Local Whisper Configuration (required if using "local" or "hybrid" strategy)
LOCAL_WHISPER_URL="http://localhost:8000/transcribe"
LOCAL_WHISPER_TIMEOUT="30000"

# Privacy Settings
DELETE_AUDIO_AFTER_TRANSCRIPTION="true"  # Delete audio files after transcription for privacy

# Weaviate Configuration
WEAVIATE_URL="http://localhost:8080"
WEAVIATE_API_KEY=""

